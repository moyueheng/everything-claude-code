{
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "description": "Chain-of-thought reasoning"
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@context7/mcp-server"],
      "description": "Live documentation lookup"
    },
    "zai-web-reader": {
      "headers": {
        "Authorization": "Bearer YOUR_ZHIPU_API_KEY_HERE"
      },
      "type": "http",
      "url": "https://open.bigmodel.cn/api/mcp/web_reader/mcp",
      "description": "网页阅读"
    },
    "zai-web-search-prime": {
      "headers": {
        "Authorization": "Bearer YOUR_ZHIPU_API_KEY_HERE"
      },
      "type": "http",
      "url": "https://open.bigmodel.cn/api/mcp/web_search_prime/mcp",
      "description": "网络搜索"
    },
    "zai-github-read": {
      "type": "http",
      "url": "https://open.bigmodel.cn/api/mcp/zread/mcp",
      "headers": {
        "Authorization": "Bearer YOUR_ZHIPU_API_KEY_HERE"
      },
      "description": "github开源仓库内容获取"
    },
    "auggie-mcp": {
      "args": [
        "--mcp"
      ],
      "command": "auggie",
      "type": "stdio",
      "description": "augment code 的上下文引擎, 类似的有 mgrep"
    }
  },
  "_comments": {
    "usage": "Copy the servers you need to your ~/.claude.json mcpServers section",
    "env_vars": "Replace YOUR_*_HERE placeholders with actual values",
    "disabling": "Use disabledMcpServers array in project config to disable per-project",
    "context_warning": "Keep under 10 MCPs enabled to preserve context window"
  }
}
